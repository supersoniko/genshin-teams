{
	"name": "genshin-teams",
	"description": "Frontend genshin-teams.com",
	"version": "1.0.0",
	"scripts": {
		"develop": "cross-env BUILD_ENV=local gatsby develop",
		"test": "jest --watch",
		"build": "cross-env BUILD_ENV=local npm run build:gatsby",
		"build:prd": "cross-env BUILD_ENV=prd npm run build:gatsby",
		"build:gatsby": "gatsby build",
		"build:lint": "npm run build:lint:scripts",
		"build:lint:scripts": "eslint src --ext .ts,.tsx --fix",
		"build:test": "jest --ci --coverageDirectory=./coverage",
		"build:coverage": "mkdir -p ./public && mv ./coverage/lcov-report ./public/__coverage",
		"plop": "plop",
		"serve": "gatsby serve",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"update-snapshots": "jest --updateSnapshot"
	},
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"@material-ui/lab": "^4.0.0-alpha.56",
		"@reach/router": "^1.3.4",
		"classnames": "^2.2.6",
		"copy-to-clipboard": "^3.3.1",
		"gatsby": "^2.24.84",
		"gatsby-image": "^2.4.21",
		"gatsby-link": "^2.4.15",
		"gatsby-plugin-alias-imports": "^1.0.5",
		"gatsby-plugin-layout": "^1.3.13",
		"gatsby-plugin-manifest": "^2.4.34",
		"gatsby-plugin-sharp": "^2.6.41",
		"gatsby-plugin-typescript": "^2.4.21",
		"gatsby-transformer-json": "^2.4.14",
		"gatsby-transformer-sharp": "^2.5.17",
		"prop-types": "^15.7.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-google-recaptcha-v3": "^1.7.0",
		"react-query": "^2.25.2"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@storybook/addon-actions": "^6.0.26",
		"@storybook/addon-docs": "^6.0.26",
		"@storybook/addon-links": "^6.0.26",
		"@storybook/addons": "^6.0.26",
		"@storybook/react": "^6.0.26",
		"@types/camelcase": "^5.2.0",
		"@types/classnames": "^2.2.10",
		"@types/enzyme": "^3.10.7",
		"@types/enzyme-adapter-react-16": "^1.0.6",
		"@types/history": "^4.7.8",
		"@types/jest": "^26.0.14",
		"@types/node": "^14.11.8",
		"@types/prettier": "^2.1.2",
		"@types/react": "^16.9.52",
		"@types/react-dom": "^16.9.8",
		"@typescript-eslint/eslint-plugin": "^4.4.1",
		"@typescript-eslint/parser": "^4.4.1",
		"acorn": "^6.4.2",
		"babel-loader": "^8.1.0",
		"camelcase": "^5.3.1",
		"cross-env": "^6.0.3",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"enzyme-to-json": "^3.6.1",
		"eslint": "^7.11.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-config-xo": "^0.32.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.4",
		"glob": "^7.1.6",
		"husky": "^2.7.0",
		"jest": "^26.5.3",
		"lint-staged": "^8.2.1",
		"module-alias": "^2.2.2",
		"plop": "^2.7.4",
		"prettier": "^2.1.2",
		"react-docgen-typescript-loader": "^3.7.2",
		"resolve-url-loader": "^3.1.2",
		"source-map-support": "^0.5.19",
		"ts-jest": "^26.4.1",
		"ts-loader": "^8.0.4",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": [
			"eslint",
			"jest --findRelatedTests"
		],
		"src/**/*.{js,ts,tsx,json,css,scss,md,eslintrc,prettierrc}": [
			"prettier --write",
			"git add"
		]
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"roots": [
			"<rootDir>/src"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/conf/setupEnzyme.ts"
		],
		"collectCoverage": true,
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^.+\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/conf/jest.file-mock.js",
			"^@components/(.*)": "<rootDir>/src/components/$1",
			"^@containers/(.*)": "<rootDir>/src/containers/$1",
			"^@pages/(.*)": "<rootDir>/src/pages/$1",
			"^@utils/(.*)": "<rootDir>/src/utils/$1",
			"^@styles/(.*)": "<rootDir>/src/styles/$1",
			"^@svg/(.*)": "<rootDir>/src/svg/$1",
			"^@templates/(.*)": "<rootDir>/src/templates/$1",
			"^@api/(.*)": "<rootDir>/src/api/$1",
			"^@redux/(.*)": "<rootDir>/src/redux/$1"
		},
		"snapshotSerializers": [
			"enzyme-to-json/serializer"
		]
	},
	"_moduleAliases": {
		"@components": "src/components",
		"@containers": "src/containers",
		"@pages": "src/pages",
		"@utils": "src/utils",
		"@styles": "src/styles",
		"@svg": "src/svg",
		"@templates": "src/templates",
		"@api": "src/api",
		"@redux": "src/redux"
	}
}
